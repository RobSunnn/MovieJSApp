<section id="search">
    <h1>Search</h1>
    <form method="POST" class="form">
        <input type="text" class="search" name="search" placeholder="Title...">
        <input type="text" name="genre" class="genre" placeholder="Genre...">
        <input type="number" name="year" class="year" placeholder="Year...">
        <input type="submit" value="search">

    </form>
</section>

<section id="catalog">
    <div class="band">
        {{#each allMovies}}
        {{> movie}}
        {{else}}
        <div class="back">
            <h1>{{movie.title}}</h1>
            <h2>{{movie.genre}}</h2>
            <p>{{movie.description}}</p>

            <img src={{movie.imageUrl}} alt="">
            <a href="/details/{{movie._id}}" class="details">Details</a>
        </div>
          {{/each}}
    </div>


    <!-- If there are no posts matched display: -->
    <!-- <div class="no-posts">
                        <p class="no-offer">There are no movies matched...</p>
                    </div> -->
    </div>
</section>